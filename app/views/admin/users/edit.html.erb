<div class="user-form-container">
  <h1>Edit User</h1>

  <%= form_with(model: [:admin, @user], class: "user-form") do |form| %>
    <% if @user.errors.any? %>
      <div class="error-messages">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email %>
    </div>

    <div class="form-group">
      <%= form.label :password %> <span class="hint">(leave blank if you don't want to change it)</span>
      <%= form.password_field :password %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation %>
    </div>

    <div class="form-group">
      <%= form.label :role %>
      <%= form.select :role, User::ROLES %>
    </div>

    <div class="form-actions">
      <%= form.submit "Update User", class: "button" %>
      <%= link_to "Back", admin_users_path, class: "button button-outline" %>
    </div>
  <% end %>
</div>