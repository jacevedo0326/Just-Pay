<div class="container">
  <div class="page-header">
    <h1>Edit Worker</h1>
    <%= link_to 'Back to Workers', company_workers_path, class: 'button button-outline' %>
  </div>

  <%= form_with(model: [:company, @worker], local: true) do |f| %>
    <% if @worker.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(@worker.errors.count, "error") %> prohibited this worker from being saved:</h2>
        <ul>
          <% @worker.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-section">
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, disabled: true %>
        <small class="help-text">Email cannot be changed</small>
      </div>

      <div class="form-group">
        <%= f.label :role %>
        <%= f.text_field :role, disabled: true %>
        <small class="help-text">Role cannot be changed</small>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit 'Update Worker', class: 'button' %>
    </div>
  <% end %>
</div>