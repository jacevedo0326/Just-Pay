<div class="page-header">
  <h1>Workers</h1>
</div>

<div class="workers-list">
  <% @workers.each do |worker| %>
    <div class="worker-card">
      <div class="worker-info">
        <h3><%= worker.email %></h3>
      </div>
      <div class="worker-actions">
        <%= link_to "View", company_worker_path(worker), class: "button button-outline" %>
        <%= link_to "Edit", edit_company_worker_path(worker), class: "button button-outline" %>
        <%= button_to "Remove", company_worker_path(worker), 
            method: :delete, 
            class: "button button-outline button-danger",
            form: { data: { turbo_confirm: "Are you sure you want to remove this worker?" } } %>
      </div>
    </div>
  <% end %>
</div>

<% if @workers.empty? %>
  <div class="empty-state">
    <p>No workers found.</p>
  </div>
<% end %>