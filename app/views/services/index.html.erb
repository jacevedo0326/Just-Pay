<div class="services-container">
  <div class="page-header">
    <h1>Services</h1>
    <%= link_to "Add New Service", new_service_path, class: "button button-primary" %>
    <%= link_to "Back", jobs_path, class: "button button-primary" %>
  </div>

  <div class="services-list">
    <% @services.each do |service| %>
      <div class="service-card">
        <div class="service-name"><%= service.name %></div>
        <div class="service-price">$<%= service.price %></div>
        <div class="service-actions">
          <%= link_to "Edit", edit_service_path(service), class: "button button-edit" %>
          <%= button_to "Delete", service_path(service), 
              method: :delete, 
              class: "button button-delete",
              data: { confirm: "Are you sure you want to delete this service?" } %>
        </div>
      </div>
    <% end %>
  </div>
</div>