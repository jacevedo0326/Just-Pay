<div class="service-form">
  <%= form_with(model: service) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="form-group">
      <%= form.label :price %>
      <%= form.number_field :price, step: 0.01 %>
    </div>

    <div class="form-actions">
      <%= form.submit class: "button button-primary" %>
      <%= link_to "Back", services_path, class: "button" %>
    </div>
  <% end %>
</div>